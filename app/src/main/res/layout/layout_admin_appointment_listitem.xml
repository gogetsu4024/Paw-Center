<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:backgroundTint="@color/white"
        android:id="@+id/main_layout"
        android:background="@color/white"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="101dp">



        <!-- status icon -->

        <ImageView
            android:id="@+id/ic_app_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pending"
            android:tint="@color/grey"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

        <!-- Date layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/tv_app_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending confirmation"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/tv_app_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jul 15, 2020 1:17"
                android:textColor="@color/black"/>

        </LinearLayout>

        <!-- Appointment info -->

        <LinearLayout
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Pet -->

            <LinearLayout
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_app_pet_info"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_info"
                    android:tint="@color/link_blue"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_app_pet"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pet name"
                    android:textColor="@color/light_cyan"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Vet -->

            <TextView
                android:layout_marginBottom="1dp"
                android:id="@+id/tv_app_vet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Vet : Dr. vetname"
                android:textColor="@color/colorLightGray"
                android:textStyle="bold"/>

            <!-- Appointment for -->

            <TextView
                android:id="@+id/tv_app_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="For Neutering"
                android:textColor="@color/grey"
                android:textStyle="bold"/>


        </LinearLayout>

        <!-- Cancel / confirm icon -->

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_app_accpet"
                android:layout_width="24dp"
                android:layout_marginBottom="10dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_accept"
                android:tint="@color/green"/>

            <ImageView
                android:id="@+id/ic_app_cancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cancel"
                android:tint="@color/colorAccent"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/grey_border_bottom"/>

</LinearLayout>