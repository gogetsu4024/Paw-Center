<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mvvm.view.RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/register_background">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_username"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="username"
        app:startIconDrawable="@drawable/ic_user"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_firstName"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="firstname"
        app:startIconDrawable="@drawable/ic_firstname"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_lastName"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="lastname"
        app:startIconDrawable="@drawable/ic_name_tag"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_email"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="email"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_number"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="number"
        app:startIconDrawable="@drawable/ic_phone"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"
            android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_password"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="password"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/colorWhite"
        android:background="@drawable/background_round_corners"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/colorWhite">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="15dp"
            android:textStyle="bold"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/register_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:checked="false"
            android:text="I have read and agree to the terms of"/>

        <TextView
            android:id="@+id/tos_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="The Customer Agreement" />

    </LinearLayout>

    <Button
        android:id="@+id/register_confirm"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/link_blue"
        android:textSize="20dp"
        android:text="Sign up"
        android:onClick="RegisterAction"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="19dp"
                android:text="Already have an account ?" />

            <TextView
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/link_blue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Sign in" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
